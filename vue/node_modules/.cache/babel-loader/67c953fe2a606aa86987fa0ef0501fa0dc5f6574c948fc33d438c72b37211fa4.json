  pageSize: this.pageSize,\r\n          name: this.name\r\n        }\r\n      }).then(res => {\r\n        this.tableData = res.data?.list;\r\n        this.total = res.data?.total;\r\n      });\r\n    },\r\n\r\n    // 查看选课学生\r\n    showStudents(row) {\r\n      this.selectedStudents = row.students;  // 设置当前课程的选课学生\r\n      this.studentsDialogVisible = true;  // 显示弹框\r\n    },\r\n\r\n    // 页码变化时加载数据\r\n    handleCurrentChange(pageNum) {\r\n      this.load(pageNum);\r\n    },\r\n\r\n    // 评教方法\r\n    initComment(row) {\r\n      this.form = JSON.parse(JSON.stringify(row));\r\n      this.fromVisible = true;\r\n    },\r\n    save() {\r\n      let data = {\r\n        name: this.form.name,\r\n        teacher: this.form.teacherName,\r\n        student: this.user.name,\r\n        content: this.form.content\r\n      };\r\n      this.$request.post('/comment/add', data).then(res => {\r\n        if (res.code === '200') {\r\n          this.$message.success('评教成功');\r\n          this.fromVisible = false;\r\n        } else {\r\n          this.$message.error(res.msg);\r\n        }\r\n      });\r\n    },\r\n\r\n    // 删除选课\r\n    del(id) {\r\n      this.$confirm('您确定取消选这门课吗？', '灵魂拷问', {type: \"warning\"}).then(response => {\r\n        this.$request.delete('/choice/delete/' + id).then(res => {\r\n          if (res.code === '200') {\r\n            this.$message.success('操作成功');\r\n            this.load(1);  // 重新加载数据\r\n          } else {\r\n            this.$message.error(res.msg);\r\n          }\r\n        });\r\n      }).catch(() => {});\r\n    }\r\n  }\r\n};\r\n</script>\r\n"],"mappings":"AAyDA;EACAA,IAAA;EACAC,KAAA;IACA;MACAC,SAAA;MAAA;MACAC,OAAA;MAAA;MACAC,QAAA;MAAA;MACAC,KAAA;MACAC,IAAA,EAAAC,IAAA,CAAAC,KAAA,CAAAC,YAAA,CAAAC,OAAA;MACAC,gBAAA;MAAA;MACAC,qBAAA;MAAA;MACAC,KAAA;QACAC,OAAA,GACA;UAAAC,QAAA;UAAAC,OAAA;UAAAC,OAAA;QAAA;MAEA;MACAC,IAAA;MACAC,WAAA;IACA;EACA;EACAC,QAAA;IACA,KAAAC,IAAA;EACA;EACAC,OAAA;IACA;IACAD,KAAAlB,OAAA;MACA,IAAAA,OAAA,OAAAA,OAAA,GAAAA,OAAA;MACA,KAAAoB,Q