{"ast":null,"code":"export default {\n  name: \"Choice\",\n  data() {\n    return {\n      tableData: [],\n      // 所有的数据\n      pageNum: 1,\n      // 当前的页码\n      pageSize: 10,\n      // 每页显示的个数\n      total: 0,\n      user: JSON.parse(localStorage.getItem('xm-user') || '{}'),\n      selectedStudents: [],\n      // 选课学生列表\n      studentsDialogVisible: false,\n      // 控制选课学生弹框显示\n      rules: {\n        content: [{\n          required: true,\n          message: '请输入内容',\n          trigger: 'blur'\n        }]\n      },\n      form: {},\n      fromVisible: false\n    };\n  },\n  created() {\n    this.load(1); // 加载数据\n  },\n  methods: {\n    // 加载数据\n    load(pageNum) {\n      if (pageNum) this.pageNum = pageNum;\n      this.$request.get('/choice/selectPage', {\n        params: {\n          pageNum: this.pageNum,\n          pageSize: this.pageSize,\n          name: this.name\n        }\n      }).then(res => {\n        this.tableData = res.data?.list;\n        this.total = res.data?.total;\n      });\n    },\n    // 查看选课学生\n    showStudents(row) {\n      this.selectedStudents = row.students; // 设置当前课程的选课学生\n      this.studentsDialogVisible = true; // 显示弹框\n    },\n    // 页码变化时加载数据\n    handleCurrentChange(pageNum) {\n      this.load(pageNum);\n    },\n    // 评教方法\n    initComment(row) {\n      this.form = JSON.parse(JSON.stringify(row));\n      this.fromVisible = true;\n    },\n    save() {\n      let data = {\n        name: this.form.name,\n        teacher: this.form.teacherName,\n        student: this.user.name,\n        content: this.form.content\n      };\n      this.$request.post('/comment/add', data).then(res => {\n        if (res.code === '200') {\n          this.$message.success('评教成功');\n          this.fromVisible = false;\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    // 删除选课\n    del(id) {\n      this.$confirm('您确定取消选这门课吗？', '灵魂拷问', {\n        type: \"warning\"\n      }).then(response => {\n        this.$request.delete('/choice/delete/' + id).then(res => {\n          if (res.code === '200') {\n            this.$message.success('操作成功');\n            this.load(1); // 重新加载数据\n          } else {\n            this.$message.error(res.msg);\n          }\n        });\n      }).catch(() => {});\n    }\n  }\n};","map":{"version":3,"names":["name","data","tableData","pageNum","pageSize","total","user","JSON","parse","localStorage","getItem","selectedStudents","studentsDialogVisible","rules","content","required","message","trigger","form","fromVisible","created","load","methods","$request","get","params","then","res","list","showStudents","row","students","handleCurrentChange","initComment","stringify","save","teacher","teacherName","student","post","code","$message","success","error","msg","del","id","$confirm","type","response","delete","catch"],"sources":["src/views/teacher/Choice.vue"],"sourcesContent":["<template>\r\n  <div>\r\n    <div class=\"table\">\r\n      <el-table :data=\"tableData\" stripe>\r\n        <!-- 如果是管理员，显示选择框 -->\r\n        <el-table-column type=\"selection\" width=\"55\" align=\"center\" v-if=\"user.role === 'ADMIN'\"></el-table-column>\r\n\r\n        <!-- 课程名称 -->\r\n        <el-table-column prop=\"name\" label=\"课程名称\" show-overflow-tooltip></el-table-column>\r\n\r\n        <!-- 上课教室 -->\r\n        <el-table-column prop=\"room\" label=\"上课教室\" show-overflow-tooltip></el-table-column>\r\n\r\n        <!-- 周几 -->\r\n        <el-table-column prop=\"week\" label=\"周几\" show-overflow-tooltip></el-table-column>\r\n\r\n        <!-- 第几大节 -->\r\n        <el-table-column prop=\"segment\" label=\"第几大节\" show-overflow-tooltip></el-table-column>\r\n\r\n        <!-- 操作列：点击查看选课学生 -->\r\n        <el-table-column label=\"操作\" width=\"180\" align=\"center\" v-if=\"user.role === 'STUDENT'\">\r\n          <template v-slot=\"scope\">\r\n            <el-button plain type=\"primary\" size=\"mini\" @click=\"showStudents(scope.row)\">\r\n              查看选课学生\r\n            </el-butt