{"ast":null,"code":"export default {\n  name: \"StudentPerson\",\n  data() {\n    return {\n      student: {\n        id: null,\n        major: null,\n        college: null,\n        class: null,\n        gender: null,\n        age: null,\n        photo: 'https://via.placeholder.com/150' // 默认占位图片\n      },\n      user: JSON.parse(localStorage.getItem('xm-user') || '{}')\n    };\n  },\n  created() {\n    // 从localStorage获取当前用户信息并填充student数据\n    if (this.user) {\n      this.student.id = this.user.username || '未知';\n      this.student.major = this.user.specialityName || '未知';\n      this.student.college = this.user.collegeName || '未知';\n      this.student.class = this.user.className || '未知';\n      this.student.gender = this.user.gender || '未知';\n      this.student.age = this.user.age || '未知';\n      this.student.photo = this.user.avatar || 'https://via.placeholder.com/150';\n    }\n  },\n  methods: {\n    update() {\n      // 保存当前的用户信息到数据库\n      this.$request.put('/student/update', this.user).then(res => {\n        if (res.code === '200') {\n          // 成功更新\n          this.$message.success('保存成功');\n\n          // 更新浏览器缓存里的用户信息\n          localStorage.setItem('xm-user', JSON.stringify(this.user));\n\n          // 更新student数据，确保显示最新的信息\n          this.student = {\n            ...this.user\n          };\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    handleAvatarSuccess(response, file, fileList) {\n      // 更新头像\n      this.$set(this.user, 'avatar', response.data);\n      this.student.photo = response.data; // 同步更新student的头像\n    }\n  }\n};","map":{"version":3,"names":["name","data","student","id","major","college","class","gender","age","photo","user","JSON","parse","localStorage","getItem","created","username","specialityName","collegeName","className","avatar","methods","update","$request","put","then","res","code","$message","success","setItem","stringify","error","msg","handleAvatarSuccess","response","file","fileList","$set"],"sources":["src/views/manager/StudentPerson.vue"],"sourcesContent":["<template>\r\n  <div class=\"container\">\r\n    <h1 class=\"title\">个人信息展示</h1>\r\n\r\n    <!-- 照片部分放在最上面 -->\r\n    <div class=\"photo-item\">\r\n      <img :src=\"student.photo\" alt=\"个人照片\" class=\"photo\"/>\r\n    </div>\r\n\r\n    <!-- 个人信息部分 -->\r\n    <div class=\"info\">\r\n      <div class=\"info-item\">\r\n        <span class=\"label\">学号:</span>\r\n        <span class=\"value\">{{ student.id }}</span>\r\n      </div>\r\n      <div class=\"info-item\">\r\n        <span class=\"label\">专业:</span>\r\n        <span class=\"value\">{{ student.major }}</span>\r\n      </div>\r\n      <div class=\"info-item\">\r\n        <span class=\"label\">学院:</span>\r\n        <span class=\"value\">{{ student.college }}</span>\r\n      </div>\r\n      <div class=\"info-item\">\r\n        <span class=\"label\">班级:</span>\r\n        <span class=\"value\">{{ student.class }}</span>\r\n      </div>\r\n      <div class=\"info-item\">\r\n        <span class=\"label\">性别:</span>\r\n        <span class=\"value\">{{ student.gender }}</span>\r\n      </div>\r\n      <div class=\"info-item\">\r\n        <span class=\"label\">年龄:</span>\r\n        <span class=\"value\">{{ student.age }}</span>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- 编辑个人信息部分 -->\r\n    <el-card style=\"width: 50%\">\r\n      <el-form :model=\"user\" label-width=\"100px\" style=\"padding-right: 50px\">\r\n        <div style=\"margin: 15px; text-align: center\">\r\n          <el-upload\r\n              class=\"avatar-uploader\"\r\n              :action=\"$baseUrl + '/files/upload'\"\r\n              :show-file-list=\"false\"\r\n              :on-success=\"handleAvatarSuccess\"\r\n          >\r\n            <img v-if=\"user.avatar\" :src=\"user.avatar\" class=\"avatar\" />\r\n            <i v-else class=\"el-icon-plus avatar-uploader-icon\"></i>\r\n          </el-upload>\r\n        </div>\r\n        <el-form-item label=\"用户名\" prop=\"username\">\r\n          <el-input v-model=\"user.username\" placeholder=\"用户名\" disabled></el-input>\r\n        </el-form-item>\r\n        <el-form-item label=\"姓名\" prop=\"name\">\r\n          <el-input v-model=\"user.name\" placeholder=\"姓名\"></el-input>\r\n        </el-form-item>\r\n        <el-form-item label=\"学院\" prop=\"collegeName\">\r\n          <el-input v-model=\"user.collegeName\" disabled></el-input>\r\n        </el-form-item>\r\n        <el-form-item label=\"专业\" prop=\"specialityName\">\r\n          <el-input v-model=\"user.specialityName\" disabled></el-input>\r\n        </el-form-item>\r\n        <el-form-item label=\"班级\" prop=\"className\">\r\n          <el-input v-model=\"user.className\" disabled></el-input>\r\n        </el-form-item>\r\n        <div style=\"text-align: center; margin-bottom: 20px\">\r\n          <el-button type=\"primary\" @click=\"update\">保 存</el-button>\r\n        </div>\r\n      </el-form>\r\n    </el-card>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  name: \"StudentPerson\",\r\n  data() {\r\n    return {\r\n      student: {\r\n        id: null,\r\n        major: null,\r\n        college: null,\r\n        class: null,\r\n        gender: null,\r\n        age: null,\r\n        photo: 'https://via.placeholder.com/150',  // 默认占位图片\r\n      },\r\n      user: JSON.parse(localStorage.getItem('xm-user') || '{}')\r\n    }\r\n  },\r\n  created() {\r\n    // 从localStorage获取当前用户信息并填充student数据\r\n    if (this.user) {\r\n      this.student.id = this.user.username || '未知';\r\n      this.student.major = this.user.specialityName || '未知';\r\n      this.student.college = this.user.collegeName || '未知';\r\n      this.student.class = this.user.className || '未知';\r\n      this.student.gender = this.user.gender || '未知';\r\n      this.student.age = this.user.age || '未知';\r\n      this.student.photo = this.user.avatar || 'https://via.placeholder.com/150';\r\n    }\r\n  },\r\n  methods: {\r\n    update() {\r\n      // 保存当前的用户信息到数据库\r\n      this.$request.put('/student/update', this.user).then(res => {\r\n        if (res.code === '200') {\r\n          // 成功更新\r\n          this.$message.success('保存成功')\r\n\r\n          // 更新浏览器缓存里的用户信息\r\n          localStorage.setItem('xm-user', JSON.stringify(this.user))\r\n\r\n          // 更新student数据，确保显示最新的信息\r\n          this.student = { ...this.user };\r\n        } else {\r\n          this.$message.error(res.msg)\r\n        }\r\n      })\r\n    },\r\n    handleAvatarSuccess(response, file, fileList) {\r\n      // 更新头像\r\n      this.$set(this.user, 'avatar', response.data);\r\n      this.student.photo = response.data;  // 同步更新student的头像\r\n    },\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n/deep/.el-form-item__label {\r\n  font-weight: bold;\r\n}\r\n/deep/.el-upload {\r\n  border-radius: 50%;\r\n}\r\n/deep/.avatar-uploader .el-upload {\r\n  border: 1px dashed #d9d9d9;\r\n  cursor: pointer;\r\n  position: relative;\r\n  overflow: hidden;\r\n  border-radius: 50%;\r\n}\r\n/deep/.avatar-uploader .el-upload:hover {\r\n  border-color: #409EFF;\r\n}\r\n.avatar-uploader-icon {\r\n  font-size: 28px;\r\n  color: #8c939d;\r\n  width: 120px;\r\n  height: 120px;\r\n  line-height: 120px;\r\n  text-align: center;\r\n  border-radius: 50%;\r\n}\r\n.avatar {\r\n  width: 120px;\r\n  height: 120px;\r\n  display: block;\r\n  border-radius: 50%;\r\n}\r\n</style>"],"mappings":"AA2EA;EACAA,IAAA;EACAC,KAAA;IACA;MACAC,OAAA;QACAC,EAAA;QACAC,KAAA;QACAC,OAAA;QACAC,KAAA;QACAC,MAAA;QACAC,GAAA;QACAC,KAAA;MACA;MACAC,IAAA,EAAAC,IAAA,CAAAC,KAAA,CAAAC,YAAA,CAAAC,OAAA;IACA;EACA;EACAC,QAAA;IACA;IACA,SAAAL,IAAA;MACA,KAAAR,OAAA,CAAAC,EAAA,QAAAO,IAAA,CAAAM,QAAA;MACA,KAAAd,OAAA,CAAAE,KAAA,QAAAM,IAAA,CAAAO,cAAA;MACA,KAAAf,OAAA,CAAAG,OAAA,QAAAK,IAAA,CAAAQ,WAAA;MACA,KAAAhB,OAAA,CAAAI,KAAA,QAAAI,IAAA,CAAAS,SAAA;MACA,KAAAjB,OAAA,CAAAK,MAAA,QAAAG,IAAA,CAAAH,MAAA;MACA,KAAAL,OAAA,CAAAM,GAAA,QAAAE,IAAA,CAAAF,GAAA;MACA,KAAAN,OAAA,CAAAO,KAAA,QAAAC,IAAA,CAAAU,MAAA;IACA;EACA;EACAC,OAAA;IACAC,OAAA;M